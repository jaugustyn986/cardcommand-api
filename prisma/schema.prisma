// ============================================
// CardCommand Center - Database Schema
// ============================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// Enums
// ============================================

enum Category {
  basketball
  baseball
  football
  hockey
  soccer
  pokemon
  mtg
  yugioh
  one_piece
  digimon
  lorcana
}

enum Liquidity {
  High
  Medium
  Low
}

enum Plan {
  free
  premium
  pro
}

enum UserStatus {
  active
  inactive
  suspended
}

// Release intel pipeline: source tier and confidence
enum SourceTier {
  A   // No-scrape: APIs, feeds, stable structured pages
  B   // Light fetch + parse: allowed HTML pages
  C   // Manual/curated or rumor (promote when second source agrees)
}

enum Confidence {
  confirmed
  unconfirmed
  rumor
}

// ============================================
// Models
// ============================================

model User {
  id            String          @id @default(uuid())
  email         String          @unique
  password      String
  name          String?
  plan          Plan            @default(free)
  status        UserStatus      @default(active)
  createdAt     DateTime        @default(now()) @map("created_at")
  updatedAt     DateTime        @updatedAt @map("updated_at")

  preferences   UserPreferences?
  portfolio     PortfolioItem[]
  trackedDeals  TrackedDeal[]

  @@map("users")
}

model UserPreferences {
  id                    String   @id @default(uuid())
  userId                String   @unique @map("user_id")
  categories            String[]
  priceRangeMin         Float    @default(0) @map("price_range_min")
  priceRangeMax         Float    @default(0) @map("price_range_max")
  grades                String[]
  graders               String[]
  dealAlertThreshold    Float    @default(20) @map("deal_alert_threshold")
  notificationChannels  String[] @map("notification_channels")

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_preferences")
}

model Deal {
  id              String   @id @default(uuid())
  cardName        String   @map("card_name")
  cardSet         String   @map("card_set")
  year            Int
  cardNumber      String?  @map("card_number")
  variation       String?
  grade           String
  grader          String?
  marketPrice     Float    @map("market_price")
  dealPrice       Float    @map("deal_price")
  savingsPercent  Float    @map("savings_percent")
  savingsAmount   Float    @map("savings_amount")
  marketplace     String
  sellerRating    Float    @map("seller_rating")
  sellerFeedback  Int      @map("seller_feedback")
  listingUrl      String   @map("listing_url")
  imageUrl        String?  @map("image_url")
  category        Category
  liquidity       Liquidity
  lastSoldPrice   Float?   @map("last_sold_price")
  thirtyDayAvg    Float?   @map("thirty_day_avg")
  ninetyDayTrend  Float?   @map("ninety_day_trend")
  popGraded       Int?     @map("pop_graded")
  popGrade10      Int?     @map("pop_grade_10")
  isActive        Boolean  @default(true) @map("is_active")
  expiresAt       DateTime? @map("expires_at")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  
  trackedBy       TrackedDeal[]
  strategy        Json?

  @@map("deals")
  @@index([category])
  @@index([isActive])
  @@index([createdAt])
}

model TrackedDeal {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  dealId    String   @map("deal_id")
  createdAt DateTime @default(now()) @map("created_at")

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  deal  Deal  @relation(fields: [dealId], references: [id], onDelete: Cascade)

  @@unique([userId, dealId])
  @@map("tracked_deals")
}

model PortfolioItem {
  id              String   @id @default(uuid())
  userId          String   @map("user_id")
  cardName        String   @map("card_name")
  cardSet         String   @map("card_set")
  year            Int
  grade           String
  grader          String?
  currentValue    Float    @map("current_value")
  purchasePrice   Float    @map("purchase_price")
  purchaseDate    DateTime @default(now()) @map("purchase_date")
  quantity        Int      @default(1)
  imageUrl        String?  @map("image_url")
  notes           String?
  inGradingQueue  Boolean  @default(false) @map("in_grading_queue")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("portfolio_items")
}

model Release {
  id              String   @id @default(uuid())
  name            String
  releaseDate     DateTime @map("release_date")
  category        Category
  manufacturer    String
  msrp            Float
  estimatedResale Float?   @map("estimated_resale")
  hypeScore       Float?   @map("hype_score")
  imageUrl        String?  @map("image_url")
  topChases       String[] @map("top_chases")
  printRun        String?  @map("print_run")
  description     String?
  isReleased      Boolean  @default(false) @map("is_released")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  products        ReleaseProduct[]

  @@map("releases")
}

model ReleaseProduct {
  id               String      @id @default(uuid())
  releaseId        String      @map("release_id")
  name             String
  productType      String      @map("product_type")
  category         Category
  msrp             Float?      @map("msrp")
  estimatedResale  Float?      @map("estimated_resale")
  releaseDate      DateTime?   @map("release_date")
  preorderDate     DateTime?   @map("preorder_date")
  imageUrl         String?     @map("image_url")
  buyUrl           String?     @map("buy_url")
  contentsSummary  String?     @map("contents_summary")
  sourceTier       SourceTier? @map("source_tier")
  sourceUrl        String?     @map("source_url")
  confidence       Confidence  @default(confirmed)
  createdAt        DateTime    @default(now()) @map("created_at")
  updatedAt        DateTime    @updatedAt @map("updated_at")

  release          Release     @relation(fields: [releaseId], references: [id], onDelete: Cascade)
  changes          ReleaseProductChange[]
  strategies       ReleaseProductStrategy[]

  @@map("release_products")
  @@index([category])
  @@index([releaseDate])
  @@index([confidence])
}

model ReleaseProductChange {
  id               String        @id @default(uuid())
  releaseProductId String        @map("release_product_id")
  field            String
  oldValue         String?       @map("old_value")
  newValue         String?       @map("new_value")
  detectedAt       DateTime     @default(now()) @map("detected_at")
  sourceUrl        String?       @map("source_url")

  releaseProduct   ReleaseProduct @relation(fields: [releaseProductId], references: [id], onDelete: Cascade)

  @@map("release_product_changes")
  @@index([releaseProductId])
  @@index([detectedAt])
}

model ReleaseProductStrategy {
  id               String     @id @default(uuid())
  releaseProductId String     @map("release_product_id")
  primary          String
  confidence       Float
  reasonSummary    String     @map("reason_summary")
  keyFactors       Json?      @map("key_factors")
  createdAt        DateTime   @default(now()) @map("created_at")

  releaseProduct   ReleaseProduct @relation(fields: [releaseProductId], references: [id], onDelete: Cascade)

  @@map("release_product_strategies")
  @@index([releaseProductId])
}

model TrendingItem {
  id              String   @id @default(uuid())
  cardName        String   @map("card_name")
  cardSet         String   @map("card_set")
  category        Category
  currentPrice    Float    @map("current_price")
  priceChange24h  Float    @default(0) @map("price_change_24h")
  priceChange7d   Float    @default(0) @map("price_change_7d")
  priceChange30d  Float    @default(0) @map("price_change_30d")
  volumeIncrease  Float    @default(0) @map("volume_increase")
  searchVolume    Int      @default(0) @map("search_volume")
  sentiment       String   @default("Neutral")
  calculatedAt    DateTime @default(now()) @map("calculated_at")

  @@map("trending_items")
}

// ============================================
// TCG Data Layer (Provider-agnostic catalog + pricing)
// ============================================

model Game {
  id          String    @id @default(uuid())
  slug        String    @unique
  name        String
  enabled     Boolean   @default(false)
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  sets        TcgSet[]
  cards       TcgCard[]

  @@map("games")
}

model TcgSet {
  id             String    @id @default(uuid())
  gameId         String    @map("game_id")
  provider       String
  providerSetId  String    @map("provider_set_id")
  name           String
  releaseDate    DateTime? @map("release_date")
  series         String?
  total          Int?
  images         Json?
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  game           Game      @relation(fields: [gameId], references: [id], onDelete: Cascade)
  cards          TcgCard[]

  @@unique([gameId, provider, providerSetId])
  @@index([gameId, releaseDate(sort: Desc)])
  @@index([provider, providerSetId])
  @@map("tcg_sets")
}

model TcgCard {
  id              String      @id @default(uuid())
  gameId          String      @map("game_id")
  setId           String      @map("set_id")
  provider        String
  providerCardId  String      @map("provider_card_id")
  name            String
  number          String?
  rarity          String?
  images          Json?
  tcgplayerId     String?     @map("tcgplayer_id")
  scryfallId      String?     @map("scryfall_id")
  createdAt       DateTime    @default(now()) @map("created_at")
  updatedAt       DateTime    @updatedAt @map("updated_at")

  game            Game        @relation(fields: [gameId], references: [id], onDelete: Cascade)
  set             TcgSet      @relation(fields: [setId], references: [id], onDelete: Cascade)
  latestPrices    PriceLatest[]
  priceHistory    PriceHistoryDaily[]

  @@unique([gameId, provider, providerCardId])
  @@index([setId, rarity])
  @@index([name])
  @@index([tcgplayerId])
  @@index([scryfallId])
  @@map("tcg_cards")
}

model PriceLatest {
  id          String    @id @default(uuid())
  cardId      String    @map("card_id")
  source      String
  currency    String    @default("USD")
  market      Float?
  low         Float?
  mid         Float?
  high        Float?
  directLow   Float?    @map("direct_low")
  updatedAt   DateTime  @default(now()) @map("updated_at")

  card        TcgCard   @relation(fields: [cardId], references: [id], onDelete: Cascade)

  @@unique([cardId, source, currency])
  @@index([updatedAt(sort: Desc)])
  @@map("price_latest")
}

model PriceHistoryDaily {
  id          String    @id @default(uuid())
  cardId      String    @map("card_id")
  source      String
  date        DateTime
  market      Float?
  low         Float?
  mid         Float?
  high        Float?
  directLow   Float?    @map("direct_low")
  currency    String    @default("USD")
  createdAt   DateTime  @default(now()) @map("created_at")

  card        TcgCard   @relation(fields: [cardId], references: [id], onDelete: Cascade)

  @@unique([cardId, source, currency, date])
  @@index([date(sort: Desc)])
  @@map("price_history_daily")
}

model ProviderRawCache {
  id            String    @id @default(uuid())
  provider      String
  gameSlug      String    @map("game_slug")
  resourceType  String    @map("resource_type")
  resourceKey   String    @map("resource_key")
  payload       Json
  fetchedAt     DateTime  @default(now()) @map("fetched_at")
  expiresAt     DateTime? @map("expires_at")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  @@unique([provider, gameSlug, resourceType, resourceKey])
  @@index([gameSlug, resourceType])
  @@index([expiresAt])
  @@map("provider_raw_cache")
}
